<div class="container d-flex d-wrap wide part">
{% for group in skills %}
  <div class="section skills">
    <div class="div-h2">
      <h2>{{ group.name }}</h2>
    </div>
    <div class="list-of">
      {% for item in group.list %}
        <div class="badge black">
          <img src="{{ item.icon }}" alt="{{ item.name }}" height="20" width="20">
          <span>{{ item.name }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
{% endfor %}
</div>

<div class="container d-flex d-wrap wide part">
{% for sec in cv %}
  <div class="section exp-edu">
    <div class="div-h2">
      <h2 class="d-flex align-items-center"><img src="{{ sec.icon }}" alt="{{ sec.name }}" height="30" width="30"> {{ sec.name }}</h2>
    </div>
    <div class="list-of">
      {% for item in sec.list %}
        <div class="item">
          <div class="d-flex d-flex-wrap align-items-center">
            <div class="where">
              <div>{{ item.where }}</div>
              <div>{{ item.date }}</div>
            </div>
            <div class="title">
              <h4>{{ item.title }}</h4>
              <p>{{ item.activity }}</p>
              <div class="tech">
                {% for item2 in item.tech %}
                  <div title="{{ item2.name }}" class="skill-small">
                    <img src="{{ item2.icon }}" alt="{{ item2.name }}" height="20" width="20">
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endfor %}
</div>