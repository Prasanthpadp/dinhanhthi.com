{# Skills #}
<div class="container d-flex d-flex-wrap wide">
  {% for group in skills %}
    <div id="{{ group.name | lower }}" class="section skills">
      <div class="div-h2">
        <h2>{{ group.name }}</h2>
      </div>
      <div class="list-of">
        {% for item in group.list %}
          {% if not item.later %}
            <div class="badge black">
              <img src="{{ item.icon }}" alt="{{ item.name }}" height="20" width="20">
              <span>{{ item.name }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>

{# Education & Experiences #}
<div class="container d-flex d-flex-wrap wide">
  {% for sec in cv %}
    <div id="{{ sec.name | lower }}" class="section exp-edu">
      <div class="div-h2">
        <h2 class="d-flex align-items-center"><img src="{{ sec.icon }}" alt="{{ sec.name }}" height="30" width="30">
          {{ sec.name }}</h2>
      </div>
      <div class="list-of">
        {% for item in sec.list %}
          <div class="item">
            <div class="d-flex d-flex-wrap align-items-center">
              <div class="where">
                <div>
                  {% if item.url %}
                    <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.where }}</a>
                  {% else %}
                    {{ item.where }}
                  {% endif %}
                </div>
                <div>{{ item.date }}</div>
              </div>
              <div class="title">
                <h4>{{ item.title }}</h4>
                <div class="where-2">
                  <span>{% if item.url %}<a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.where }}</a>{% else %}{{ item.where }}{% endif %}</span>,
                  <span class="date-2">{{ item.date }}</span>
                </div>
                <p>{{ item.activity }}</p>
                <div class="tech">
                  {% for item2 in item.tech %}
                    <div title="{{ item2.name }}" class="skill-small">
                      <img src="{{ item2.icon }}" alt="{{ item2.name }}" height="20" width="20">
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>

{# Projects #}
<div class="container wide">
  <div id="projects" class="section projects">
    <div class="div-h2">
      <h2 class="d-flex align-items-center">
        Projects
      </h2>
    </div>
    <div class="list-of-all d-flex d-flex-wrap">
      {% for item in projects %}
        <div class="list-wrapper">
          <div class="list-of">
            <div class="title">
              <a href="{% if item.source %}{{ item.source }}{% else %}{{ item.url }}{% endif %}">
                <h4>{{ item.icon }}
                  <span>{{ item.title }}</span></h4>
              </a>
              <p>{{ item.description | safe }}</p>
              {% if item.tech or item.tech_text %}
                <div class="tech">
                  {% if item.tech %}
                    {% for item2 in item.tech %}
                      <div title="{{ item2.name }}" class="skill-small">
                        <img src="{{ item2.icon }}" alt="{{ item2.name }}" height="20" width="20">
                      </div>
                    {% endfor %}
                  {% endif %}
                  {% if item.tech_text %}
                    {% for item3 in item.tech_text %}
                      <span class="tech-text">{{ item3 }}</span>
                    {% endfor %}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>