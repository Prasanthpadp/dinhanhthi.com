---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: post
eleventyComputed:
  title: Topic “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
icon: tag_.svg
---

<p>Check <a href="{{ '/tags/' | url }}">all topics</a> on this site.</p>

{% set more_post = false %}
{# post outside 11ty .md files #}
{# {% if cat_external_post[tag] %}
	{% set more_post = cat_external_post[tag] %}
{% endif %} #}

{% set newPostListTag = [] %}
{% for item in categories %}
	{% if cat_external_post[item.name] %}
		{% for post in cat_external_post[item.name] %}
			{% if post.tags %}
				{% for tg in post.tags %}
					{% if tg == tag %}
						{% set more_post = true %}
						{% if post.notfull %}
							{% set newPostListTag = (newPostListTag.push({url: post.url, title: post.title, notfull: post.notfull}), newPostListTag) %}
						{% else %}
							{% set newPostListTag = (newPostListTag.push({url: post.url, title: post.title}), newPostListTag) %}
						{% endif %}
					{% endif %}
				{% endfor %}
			{% endif %}
		{% endfor %}
	{% endif %}
{% endfor %}

{% if more_post %}
	{% set more_post = newPostListTag %}
{% endif %}

{% set postslist = collections[ tag ] %}
{% set customClass = 'indent' %}
{% include "postslist.njk" %}

<p style="font-style: italic; color: #777; font-size: 0.95rem; margin: 0; order: 3;">
	<sup style="color: #bbb">•</sup>{{ other_data.notfull }}
</p>

